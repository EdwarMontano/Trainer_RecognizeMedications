# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files
[*.{py,pyw}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Maximum line length for Python
[*.py]
max_line_length = 80

# Markdown files, might be used in documentation
[*.md]
trim_trailing_whitespace = false

# Jupyter Notebook files
[*.ipynb]
trim_trailing_whitespace = true
# insert_final_newline = false
# JSON structure doesn't benefit from end_of_line settings
end_of_line = unset

